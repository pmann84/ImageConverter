<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ImageConverterApp.MainWindow"
        Title="ImageConverterApp">

  <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <Button Click="OnConvertBtnClicked"
              Margin="10,10,10,10"
              VerticalAlignment="Center" 
              HorizontalAlignment="Right">Convert</Button>
      <DataGrid Grid.Row="1" AutoGenerateColumns="True"
                Name="ImageConversionGrid"
                Margin="10,0,10,10"
                IsReadOnly="True"
                VerticalScrollBarVisibility="Auto"
                Items="{Binding ImageConversions}"></DataGrid>
  </Grid>
</Window>
